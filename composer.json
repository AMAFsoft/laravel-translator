{
  "name": "thiagocordeiro/laravel-translator",
  "description": "Search translation keys and insert into json to be translated",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Thiago Cordeiro",
      "email": "thiagoguetten@gmail.com"
    }
  ],
  "config": {
    "platform": {
      "php": "7.1.3"
    }
  },
  "require": {
    "php": ">=7.1.3",
    "ext-json": "*",
    "laravel/framework": ">=5.4.0"
  },
  "require-dev": {
    "composer/composer": "^1.8",
    "squizlabs/php_codesniffer": "^3.4",
    "slevomat/coding-standard": "^5.0",
    "phpstan/phpstan": "^0.11.8",
    "phpunit/phpunit": "^7.5"
  },
  "scripts": {
    "cs:check": "phpcs --colors -ps",
    "test:unit": "phpunit --testdox --color=always",
    "test:stan": "vendor/bin/phpstan analyse src --level=max --ansi",
    "tests": [
      "@cs:check",
      "@test:unit",
      "@test:stan"
    ]
  },
  "autoload": {
    "psr-4": {
      "Translator\\": "src/"
    },
    "files": [
      "src/Framework/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Translator\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Translator\\Framework\\TranslatorServiceProvider"
      ]
    }
  }
}
